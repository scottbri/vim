" 4 spaces for tab
set ts=4

" Line numbering on
set nu

" Syntax highlighting on
syntax on

" Highlight search results
set hlsearch

" Incremental search
set incsearch

" Always show current position
set ruler

" Show matching brackets
set showmatch

" How many tenths of a second to blink when matching brackets
set mat=2

" No annoying sound on errors
set noerrorbells
set novisualbell
set t_vb=
set tm=500

" Set color scheme
colorscheme peaksea
